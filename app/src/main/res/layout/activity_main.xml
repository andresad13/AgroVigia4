<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:background="#F1EEDA"
    tools:context="com.agustiniana.proyec.agrovigia.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#009D84"
        android:layout_weight="0.4">

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageView4" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logoagrovigia"
            android:id="@+id/imageView5" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/imageView6" />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
         android:textColor="@android:color/black"
            android:text="Monitoreo y control de cultivos."
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:hint="ingrese su nombre"
            android:textColorHint="#4C565E"
            android:textColorHighlight="#4C565E"
            android:textColor="#131517"
            android:id="@+id/editText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"/>
        <EditText

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:hint="ingrese su clave"
            android:textColorHint="#4C565E"
            android:textColorHighlight="#4C565E"
            android:textColor="#131517"
            android:id="@+id/editText2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Registrar"

            android:id="@+id/button"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:enabled="true"
            android:focusable="false"
            android:onClick="Reg_User" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>




</LinearLayout>
